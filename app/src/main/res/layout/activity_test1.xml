<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1565c0"
    tools:context=".test1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tvtimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#fff"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/card_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:text="Qestions"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle=""
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <androidx.cardview.widget.CardView
            android:onClick="OptionAClick"
            android:id="@+id/cardA"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optiona"
                android:textColor="#000"
                android:text="Option A"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="OptionBClick"
            android:id="@+id/cardB"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optionb"
                android:textColor="#000"
                android:text="Option B"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="OptionCClick"
            android:id="@+id/cardC"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optionc"
                android:textColor="#000"
                android:text="Option C"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="OptionDClick"
            android:id="@+id/cardD"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optiond"
                android:textColor="#000"
                android:text="Option D"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tvremaining"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1/20"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:gravity="center"/>


            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_toEndOf="@+id/tvremaining"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/nextarrow"
                android:background="@drawable/nextbtn"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>